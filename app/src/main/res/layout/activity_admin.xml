<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5EAFB"
    android:fitsSystemWindows="true"
    tools:context=".ui.admin.AdminActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_1176"/>

            <TextView
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:text="@string/admin"
                android:textAlignment="center"
                android:backgroundTint="#3C8AFF"
                android:fontFamily="@font/inter_extra_bold"
                android:textColor="@color/black"
                android:background="@drawable/custom_border"
                android:textSize="50sp"/>

            <LinearLayout
                android:id="@+id/petAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="30dp"
                android:backgroundTint="#3C8AFF"
                android:background="@drawable/border">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:padding="4dp"
                    android:src="@drawable/dogcatbirdfish_1"/>

                <TextView
                    android:layout_gravity="center"
                    android:text="@string/pet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:fontFamily="@font/inter_extra_bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/foodAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="30dp"
                android:backgroundTint="#3C8AFF"
                android:background="@drawable/border">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:padding="4dp"
                    android:src="@drawable/wishkas" />

                <TextView
                    android:layout_gravity="center"
                    android:text="@string/food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:fontFamily="@font/inter_extra_bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/accessoriesAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="30dp"
                android:backgroundTint="#3C8AFF"
                android:background="@drawable/border">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:background="@drawable/border"
                    android:src="@drawable/accessories" />

                <TextView
                    android:layout_gravity="center"
                    android:text="@string/accessories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:fontFamily="@font/inter_extra_bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:textSize="25sp"
                android:layout_gravity="bottom"
                android:backgroundTint="#3C8AFF"
                android:textColor="@color/black"
                android:text="@string/logout"
                android:fontFamily="@font/inter_bold"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
